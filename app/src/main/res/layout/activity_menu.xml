<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/BackgroundColor">

    <Button
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:text="@string/MenuBtnLearn"
        android:id="@+id/learn"
        android:layout_weight="1"
        android:onClick="learn" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:text="@string/MenuBtnAddFlashcard"
        android:id="@+id/add"
        android:layout_weight="1"
        android:onClick="addFlashcard"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:text="@string/MenuBtnSeeAll"
        android:id="@+id/see"
        android:layout_weight="1"
        android:onClick="seeAll"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:text="@string/MenuBtnSettings"
        android:id="@+id/settings"
        android:layout_weight="1"
        android:onClick="settings"/>

</LinearLayout>